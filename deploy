apiVersion: v1 
kind: Deployment
metadata:
  name: deployment
spec:
  selector:
    matchLabels:
      app: kubeadam
  
  template:
    metadata:
      labels:
        app: kubeadam
    spec:
      containers:
      - name: kubeadam-ctr
        image: bhanalliarun/my-doc:2.0.0
        ports:
        - containerPort: 8080

---
apiVersion: v1
kind: Service
metadata:
  name: kubeadam-svc
  labels:
    app: kubeadam
spec:
  type: NodePort
  ports:
    - port: 8075
      targetPort: 8080
      protocol: TCP   
      
  selector:
    app: kubeadam